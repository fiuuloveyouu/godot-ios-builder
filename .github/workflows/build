name: Build Godot iOS IPA

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: macos-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Install Godot
        run: |
          brew install --cask godot
      - name: Build IPA
        run: |
          mkdir build
          cd build
          godot --headless --export-release "iOS" "BrotherHaiRestaurant.ipa"
      - name: Upload IPA
        uses: actions/upload-artifact@v3
        with:
          name: GodotGame
          path: build/*.ipa
